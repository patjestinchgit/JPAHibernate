<?xml version="1.0" encoding="UTF-8"?>
<persistence version='2.1'
xmlns='http://xmlns.jcp.org/xml/ns/persistence'
xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
xsi:schemaLocation='http://xmlns.jcp.org/xml/ns/persistence
http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/persistence/persistence_2_1.xsd'>
<persistence-unit name='toysforboys'> 
<non-jta-data-source>
java:/comp/env/jdbc/toysforboys 
</non-jta-data-source>
<class>be.toysforboys.entities.Countrie</class>
<class>be.toysforboys.entities.Order</class>
<class>be.toysforboys.entities.Customer</class>
<class>be.toysforboys.entities.OrderDetailsPK</class>
<class>be.toysforboys.entities.OrderDetails</class>
<class>be.toysforboys.entities.Product</class>
<class>be.toysforboys.entities.ProductLine</class>
<properties> 
<property name='hibernate.show_sql' value='true'/> 
<property name='hibernate.format_sql' value='true'/> 
<property name='hibernate.use_sql_comments' value='true'/> 
</properties>
</persistence-unit>
</persistence>